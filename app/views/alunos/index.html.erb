<p id="notice"><%= notice %></p>

<h1>Listing Alunos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Aniversario</th>
      <th>Ultimo pagamento</th>
      <th>Atraso pagamento</th>
      <th>Senha</th>
      <th>Telefone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
        <td><%= aluno.nome %></td>
        <td><%= aluno.aniversario %></td>
        <td><%= aluno.ultimo_pagamento %></td>
        <td><%= aluno.atraso_pagamento %></td>
        <td><%= aluno.senha %></td>
        <td><%= aluno.telefone %></td>
        <td><%= aluno.email %></td>
        <td><%= link_to 'Show', aluno %></td>
        <td><%= link_to 'Edit', edit_aluno_path(aluno) %></td>
        <td><%= link_to 'Destroy', aluno, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

